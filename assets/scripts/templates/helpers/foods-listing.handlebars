<!--From handlebar Example class -->

{{#each foods as |food|}}
  {{log food}}

  <div class="handlebar">
  <h1 data-id="{{food.id}}"> <small>Name: {{food.name}}</small></h1>
  <h2 data-id="{{food.id}}"> <small>Description: {{food.description}}</small></h2>
  <h2 data-id="{{food.id}}"> <small>Status: {{food.status}}</small></h2>
  <button class="btn btn-default remove-button" data-id="{{food.id}}">Remove Food!</button>
  <!--<button class="btn btn-default update-button" data-id="{{food.id}}">Update Food!</button>-->
  </div>

  <div class="handlebar">

    <form class="form-updatefood" data-id="{{food.id}}">

      <h4> update your own food now </h4>

      <div>

        <label>Food Recipes</label>
        <input type="text" class="form-control" name="food[name]" placeholder="Name your Food" required="true">

      </div>

      <div>

        <label>Description</label>
        <input type="text" class="form-control" name="food[description]" placeholder="Describe your food here.." required="true">
        <label>Status</label>
        <input type="text" class="form-control" name="food[status]" placeholder="Spice level your food..." required="true">
        <button data-id="update-food" type="submit" class="btn btn-primary">Update your Food</button>

      </div>

    </form>
  </div>

  <hr>

{{/each}}
